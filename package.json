{
  "name": "challenge",
  "version": "1.0.0",
  "description": "Algolia coding challenge",
  "private": true,
  "author": "Tyler Nickerson",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:client": "webpack --config webpack/client/client.prod.config.js",
    "build:server": "webpack --config webpack/server/server.prod.config.js",
    "build": "PORT=3000 NODE_ENV=production npm run clean && npm run build:server && npm run build:client",
    "server:dev": "webpack --config webpack/server/server.dev.config.js && NODE_ENV=development node dist/server.js",
    "server:prod": "NODE_ENV=production node ./dist/server.min.js",
    "lint": "eslint ./src/**/*.{js,jsx}",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-react": "^7.0.0-beta.37",
    "@babel/preset-stage-2": "^7.0.0-beta.37",
    "algoliasearch": "^3.24.9",
    "algoliasearch-helper": "^2.23.2",
    "classnames": "^2.2.5",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-css-modules-transform": "^1.4.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-polyfill": "^6.26.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "isdev": "^1.0.1",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "compression-webpack-plugin": "^1.1.3",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.8",
    "csv-parse": "^2.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "isomorphic-style-loader": "^4.0.0",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.10",
    "prettier": "^1.10.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css}": [
      "prettier --write",
      "git add"
    ]
